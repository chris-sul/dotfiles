[push]
    default = simple

[alias]
    unstage = reset HEAD --
    st = status
    rebase-feature = "!f() { git rebase -i `git merge-base --fork-point master`; }; f"
    branches = !legit branches
    sync = !legit sync

[color]
    ui = auto

[core]
    excludesfile = ~/.gitignore_global
    editor = vim

[include]
    path = ~/.gitconfig_local
